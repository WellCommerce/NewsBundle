<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="news.controller.admin" class="WellCommerce\Bundle\NewsBundle\Controller\Admin\NewsController">
            <argument type="service" id="news.manager"/>
            <argument type="service" id="news.form_builder.admin"/>
            <argument type="service" id="news.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="news.dataset.admin" class="WellCommerce\Bundle\NewsBundle\DataSet\Admin\NewsDataSet">
            <argument type="service" id="news.repository"/>
            <tag name="dataset" alias="news.admin"/>
        </service>

        <service id="news.datagrid" class="WellCommerce\Bundle\NewsBundle\DataGrid\NewsDataGrid">
            <argument type="service" id="news.dataset.admin"/>
            <tag name="datagrid" alias="news"/>
        </service>

        <service id="news.form_builder.admin" class="WellCommerce\Bundle\NewsBundle\Form\Admin\NewsFormBuilder" parent="core.form_builder" />
    </services>
</container>
